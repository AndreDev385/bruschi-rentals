---
export const prerender = false;

import { Image } from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import PublicLayout from "@/layouts/PublicLayout.astro";
import Hero from "@/assets/hero.jpg";

const url = new URL(Astro.request.url);
const search = url.search;
---

<Layout>
  <PublicLayout>
    <section class="relative w-full min-h-screen flex items-center py-20">
      <div class="absolute inset-0 z-0">
        <div
          class="absolute inset-0 bg-gradient-to-b from-black/70 via-obsidian/70 to-black/70"
        >
        </div>
        <Image
          src={Hero}
          alt="Hero"
          loading="eager"
          class="w-full h-full object-cover"
        />
      </div>

      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-20">
        <div class="max-w-2xl mx-auto text-center">
          <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
            <div class="flex justify-center mb-6">
              <div
                class="w-20 h-20 bg-primary/10 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-10 h-10 text-primary"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
            </div>

            <h1 class="text-4xl font-bold text-obsidian mb-4">
              Account Created Successfully!
            </h1>
            <p class="text-xl text-mocha mb-8">
              Your preferences have been sent to your realtor. We'll be in touch
              soon with personalized rental options tailored just for you.
            </p>

            <div class="space-y-4">
              <p class="text-lg text-obsidian">
                While you wait, feel free to explore more about our services or
                reach out if you have any questions.
              </p>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={`/login${search}`}
              class="inline-block px-8 py-4 bg-primary text-white font-bold rounded-lg hover:bg-primary/90 transition-all duration-300 transform hover:scale-105"
            >
              Login to Portal
            </a>
            <a
              href={`/${search}`}
              class="inline-block px-8 py-4 bg-soft-dark text-obsidian font-bold rounded-lg hover:bg-soft-light transition-all duration-300"
            >
              Back to Home
            </a>
          </div>

          <div class="mt-8">
            <a
              href="https://wa.me/message/F5OFMA5RIRXYJ1"
              target="_blank"
              class="text-primary font-medium hover:underline"
            >
              Questions? Contact us on WhatsApp
            </a>
          </div>
        </div>
      </div>
    </section>
  </PublicLayout>
</Layout>
