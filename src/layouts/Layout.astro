---
import { ClientRouter } from "astro:transitions";
import { Toaster } from "sonner";
import "sonner/dist/styles.css";

import "../styles/global.css";
import "animate.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="logos/isotype.svg"
      media="(prefers-color-scheme: light)"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="logos/isotype_dark.svg"
      media="(prefers-color-scheme: dark)"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Bruschi Rentals</title>
    <ClientRouter />
  </head>
  <body>
    <slot />
    <Toaster client:idle />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
