---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
const { quote, author, avatar, href } = Astro.props;
---

<div
  class="bg-white p-6 rounded-2xl shadow-sm border border-primary/20 hover:shadow-md transition-shadow break-inside-avoid mb-6"
>
  <Icon name="mdi:format-quote-open" class="size-12 text-primary" />
  <blockquote class="mb-4">
    {quote}
  </blockquote>

  <div class="flex items-center justify-between w-full">
    <div class="flex items-center gap-2">
      <Image
        width={48}
        height={48}
        src={avatar || "/placeholder.svg"}
        alt={author}
        class="rounded-full object-cover"
      />
      <div class="">
        <h4 class="font-bold text-lg">{author}</h4>
      </div>
    </div>
    <a target="_blank" href={href} class="flex gap-2 items-center">
      <title>Google Link</title>
      <Icon class="size-6" name="devicon:google" />
    </a>
  </div>
</div>
